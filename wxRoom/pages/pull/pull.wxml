<!--index.wxml-->

<!--筛选栏-->
<view class="cxj-menu">
  <view class="flex-view{{item.active?' active':''}}" wx:key="{{tabTxt}}" wx:key="" data-index="{{index}}" bindtap="filterTab">
    <text>{{item.text}}</text>
    <image src="/images/arrow.png" class="cxj-icon"></image>
  </view>
</view>
<!--条件选项栏-->
<view class="cxj-tab-layout" hidden="{{!item.active}}" wx:key="{{tabTxt}}" wx:for-item="item" data-index="{{index}}" bindtap="filterTabChild">
  <view class="{{item.type==0?'active':''}}" data-id="0" data-index="0" bindtap="filter">全部</view>
  <view class="{{item.type==item_child.id?'active':''}}" wx:key="{{item.child}}" wx:for-item="item_child" wx:key="" data-id="{{item_child.id}}" data-index="0" data-txt="{{item_child.text}}" bindtap="filter">{{item_child.text}}</view>
</view>